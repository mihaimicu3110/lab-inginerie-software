<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="default" transaction-type="JTA">

        <jta-data-source>jdbc/ParkingLotResource</jta-data-source>

        <class>org.example.parkinglot.entities.User</class>
        <class>org.example.parkinglot.entities.Car</class>

        <properties>
            <!-- Creează automat tabelele dacă nu există -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>

            <!-- Aplică modificările direct în baza de date -->
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>

    </persistence-unit>

</persistence>
